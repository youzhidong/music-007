page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f4f4f4;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #31c27c;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #31c27c;
}
.banner swiper{
  height: 300rpx;
}
.banner swiper image{
  width:100%;
  height: 100%;
}

.channel{
  padding: 40rpx 0rpx 30rpx 0rpx;
}
.container{
  padding: 0rpx 15rpx;
}
.channel .title{
  font-size: 30rpx;
  margin-bottom: 30rpx;
  display: block;
 
}
.channel .content{
  display: flex;
  justify-content: space-around;
}
.channel .content .list{
  height: 445rpx;
  background: #fff;
  
}
.channel .list .bigimg{
  display: block;
  width: 350rpx;
  height: 350rpx;
  position: relative;
}
.channel .list .samallimg{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
  bottom: 10rpx;
  display: block;
}
.channel .list text{
  display: block;
  font-size: 26rpx;
  margin-top: 16rpx;
  margin: 15rpx;
   width: 320rpx;
  overflow: hidden;
}

.channel.hot .content{
   display: block;
}
.channel.hot .content .list{
  float: left;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}



/*排行榜*/
.top{
  margin: 20rpx;
}
.top .item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background: #fff;
}
.top .media{
  flex: none;
  position: relative;
  width: 200rpx;
  height: 200rpx
}
.top .media .img{
  width: 100%;
  height: 100%;
}
.top .media .count{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #fff;
  opacity: .6;
}
.top .media .count:before{
  display: inline-block;
  margin-right: 6rpx;
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}
.top .info{
  flex: auto;
  margin-left: 30rpx;
  overflow: hidden;
}
.top .info .title{
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.top .info .text{
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: rgba(0,0,0,.5);
}
.top .info .text text{
  color: #000;
  margin-left: 16rpx;
  margin-right: 10rpx;
}
.top .arrow{
  flex: none;
  margin-right: 20rpx;
  width: 12rpx;
  height: 12rpx;
  border-right: 1px solid #b2b2b2;
  border-bottom: 1px solid #b2b2b2;
  transform: rotate(-45deg);
}


/*搜索*/
.search{
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.search-bar{
  flex: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f4f4f4;
}
.search-wrap{
  position: relative;
  flex: auto;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
}
.search-wrap .icon-search{
  margin-right: 10rpx;
}
.search-wrap .search-input{
  flex: auto;
  font-size: 28rpx;
}
.search-cancel{
  padding: 0 20rpx;
  font-size: 28rpx;
}

/*热门关键词*/
.search-hot{
  padding: 30rpx;
}
.hot-title{
  display: block;
  margin-bottom: 16rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: rgba(0,0,0,.6);
}
.hot-wrap{
  display: flex;
  flex-wrap: wrap;
}
.hot-item{
  margin-right: 28rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000;
  border: 2rpx solid rgba(0,0,0,.6);
  border-radius: 200rpx;
}
.hot-item.hot{
  color: #fc4524;
  border-color: #fc4524;
}
